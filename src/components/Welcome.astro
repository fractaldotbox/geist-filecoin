---
import { Button } from "@/components/react/ui/button";
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
import Demo from "./solid/Demo.tsx";
import { FileType2, FilePlus } from "lucide-react";
---

<div id="container">
	<main class="p-10 m-auto">
		<section id="hero">
			
			<h1 class="text-4xl font-bold pb-2">Geist</h1>
			<h2>Content Management for decentralized team</h2>
		</section>

		<section class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
			<div class="p-6 border rounded-lg shadow-sm hover:shadow-md transition-shadow">
				<div class="flex flex-col items-center text-center">
					<div class="mb-4 text-4xl">
						<FileType2 className="w-10 h-10" />
					</div>
					<h3 class="text-xl font-semibold mb-2">Create Content Type</h3>
					<p class="text-gray-600 mb-4">Define new content structures for your project</p>
					<a href="/content-types/new">
						<Button>Get Started</Button>
					</a>
				</div>
			</div>
			
			<div class="p-6 border rounded-lg shadow-sm hover:shadow-md transition-shadow">
				<div class="flex flex-col items-center text-center">
					<div class="mb-4 text-4xl">
						<FilePlus className="w-10 h-10" />
					</div>
					<h3 class="text-xl font-semibold mb-2">Create Entry</h3>
					<p class="text-gray-600 mb-4">Add new content to your existing types</p>
					<a href="/editor/content-type/select">
						<Button>Create Entry</Button>
					</a>
				</div>
			</div>
		</section>
	</main>


	
</div>
